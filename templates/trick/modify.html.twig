{% extends 'base.html.twig' %}

{% block title %}
    {{ trick.name }}
{% endblock %}

{% block body %}
    {% if trick.isOnline == false  %}
        <span>Ce trick n'est pas encore en ligne! Dépêches-toi de le partager</span>
    {% endif %}
    <h1>Modifer {{ trick.name }}</h1>

    <hr>
        <h2>@TODO : Partie gestion images / vidéos liés</h2>
    <hr>

    <fieldset>
        {{ form_start(trickForm) }}
        <div class="form-group">
            {{ form_errors(trickForm) }}
        </div>

        <div class="form-group">
            {{ form_row(trickForm.name) }}
        </div>

        <div class="form-group">
            {{ form_row(trickForm.content) }}
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                {{ form_row(trickForm.tag) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(trickForm.isOnline, {label_attr: {class: 'switch-custom'} }) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success btn-block">Enregistrer</button>
        {{ form_end(trickForm) }}
    </fieldset>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
